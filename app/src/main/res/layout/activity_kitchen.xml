<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="edu.murraystate.androidcamilydashboard.activity_personal">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/rellay_Calories"
                android:layout_width="410dp"
                android:layout_height="157dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/colorMint"
                android:orientation="horizontal"
                android:visibility="visible">


                <TextView
                    android:layout_width="132dp"
                    android:layout_height="400dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/colorMintDark"
                    android:padding="1dp"
                    android:text="
                    CALORIES"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="229dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:baselineAligned="false"
                    android:src="@drawable/ic_show_chart_black_24dp"
                    android:tint="@color/colorWhite" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/rellay_GroseryList"
                android:layout_width="410dp"
                android:layout_height="158dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/colorAqua"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="186dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:background="@color/colorAquaDark"
                    android:padding="5dp"
                    android:text="
                    GROUCERY
                                   LIST"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="151dp"
                    android:layout_height="153dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_create_black_24dp"
                    android:tint="@color/colorWhite"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rellay_FavouriteResturants"
                android:layout_width="410dp"
                android:layout_height="158dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/colorLavander"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="138dp"
                    android:layout_height="400dp"
                    android:layout_marginTop="0dp"
                    android:background="@color/colorPinkroseDark"
                    android:padding="20dp"
                    android:text="
                    FAVORITE
                    RESTURANTS"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="161dp"
                    android:layout_height="174dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_restaurant_black_24dp"
                    android:tint="@color/colorWhite"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rellay_Cooking"
                android:layout_width="410dp"
                android:layout_height="160dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/colorPinkrose"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="168dp"
                    android:layout_height="400dp"
                    android:layout_marginTop="0dp"
                    android:background="@color/colorLavanderDark"
                    android:padding="20dp"
                    android:text="
                    COOKING"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp" />


                <ImageView
                    android:layout_width="159dp"
                    android:layout_height="179dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_cake_black_24dp"
                    android:tint="@color/colorWhite"

                    />
            </LinearLayout>
        </LinearLayout>


    </ScrollView>



</LinearLayout>